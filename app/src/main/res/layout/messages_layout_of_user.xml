<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messages_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/default_image" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/messages_profile_image"
        android:layout_toRightOf="@+id/messages_profile_image"
        android:background="@drawable/message_text_background"
        android:padding="15dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorLink="@android:color/background_light" />

    <ImageView
        android:id="@+id/messgae_image_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message_text"
        android:layout_alignStart="@+id/message_text"
        android:layout_alignTop="@+id/messages_profile_image"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerCrop" />
</RelativeLayout>