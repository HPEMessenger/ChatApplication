<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messages_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_image" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/messages_profile_image"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/messages_profile_image"
        android:layout_toRightOf="@+id/messages_profile_image"
        android:background="@drawable/message_text_background"
        android:padding="15dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorLink="@android:color/background_light" />
</RelativeLayout>