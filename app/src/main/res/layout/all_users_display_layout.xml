<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/all_users_profile_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_image"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/all_users_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/all_users_profile_image"
            android:layout_marginStart="26dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/all_users_profile_image"
            android:text="Display Name"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/all_users_profile_image" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/online_status"/>
    </LinearLayout>

    <TextView
        android:id="@+id/all_users_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/all_users_profile_image"
        android:text="User default status" />

</RelativeLayout>